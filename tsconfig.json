{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@interfaces": [
        "./interfaces/index.ts"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@stores": [
        "./stores/index.ts"
      ],
      "@stores/*": [
        "./stores/*"
      ],
      "@components": [
        "./components/index.ts"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@data": [
        "./data/index.ts"
      ],
      "@layouts": [
        "./layouts/index.ts"
      ],
      "@layouts/*": [
        "./layouts/*"
      ],
      "@pages": [
        "./pages/index.tsx"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@router": [
        "./router/index.ts"
      ],
      "@router/*": [
        "./router"
      ],
      "@utils": [
        "./utils/index.ts"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@hooks": [
        "./hooks/index.ts"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@mocks": [
        "./data/mocks/index.ts"
      ],
      "@mocks/*": [
        "./data/mocks/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}